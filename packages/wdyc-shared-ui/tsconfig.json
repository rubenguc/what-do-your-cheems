{
  "compilerOptions": {
    "lib": ["dom", "ES2015"],
    "module": "ES2020",
    "target": "ES6",
    "jsx": "react-jsx",
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "Node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true
  },
  
  "include": ["."],
  "exclude": ["dist", "build", "node_modules"]

}
